<Window x:Class="MausReverse.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MausReverse"
        mc:Ignorable="d"
        Title="MainWindow" Height="245" Width="339">

    <Grid Margin="0,46,0,39">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="149*"/>
            <ColumnDefinition Width="150*"/>
        </Grid.ColumnDefinitions>
        <DockPanel Margin="0,-62,0,0" Height="243" VerticalAlignment="Top" Grid.ColumnSpan="2">
            <Menu DockPanel.Dock="Top" Height="183"Height="202" RenderTransformOrigin="0.496,0.574" Background="White">
                <MenuItem Header="_Menü" Foreground="Black" Background="#FFF0F0F0">
                    <MenuItem x:Name="btnExit" Header="_Schließen" Click="BtnExit_Click"/>
                    <Separator />
                    <MenuItem x:Name="btnInfo" Header="Info" Click="BtnInfo_Click"/>
                </MenuItem>
            </Menu>
        </DockPanel>
        <RadioButton Content="Links" Margin="84,46,25,78" Checked="RadioButtonLeft_Checked"/>
        <RadioButton Content="Rechts" Margin="0,48,85,80" Grid.Column="1" Checked="RadioButton_Checked"/>
    </Grid>
</Window>
