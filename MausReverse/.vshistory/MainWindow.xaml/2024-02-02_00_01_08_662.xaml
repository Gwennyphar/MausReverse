<Window x:Class="MausReverse.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MausReverse"
        mc:Ignorable="d"
        Title="MainWindow" Height="272" Width="393">
    
    <Grid Margin="0,46,0,39">
        <DockPanel>
            <Menu DockPanel.Dock="Top">
                <MenuItem Header="_Menü">
                    <MenuItem x:Name="btnExit" Header="_Schließen" Click="btnExit_Click"/>
                    <Separator />
                    <MenuItem x:Name="btnInfo" Header="Info" Click="btnInfo_Click"/>
                </MenuItem>

            </Menu>
        </DockPanel>
        <Button x:Name="BtnLeft" Content="Links" HorizontalAlignment="Left" Margin="68,0,0,0" VerticalAlignment="Center" Height="158" Width="104" Click="BtnLeft_Click" Background="#FF85B3DC" FontWeight="Bold" FontSize="18" Foreground="White"/>
        <Button x:Name="BtnRight" Content="Rechts" HorizontalAlignment="Left" Margin="213,0,0,0" VerticalAlignment="Center" Height="158" Width="104" Click="BtnRight_Click" Background="#FFA8C1CA" FontWeight="Bold" FontSize="18" Foreground="White"/>
    </Grid>
</Window>
